{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/_core/*": ["src/_core/*"]
    },

    "types": ["node"],
    "skipLibCheck": true,
    "noEmit": true,
    "strict": false
  },
  "include": ["src"]
}

