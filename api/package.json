{
  "name": "tenmon-ark-api",
  "version": "1.0.0",
  "description": "TENMON-ARK API Server - Production-ready API separated from SPA",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "echo '[build] Compiling TypeScript...' && tsc && echo '[build] Compiled routes and modules' && node scripts/copy-assets.mjs",
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "check": "tsc --noEmit"
  },
  "keywords": [
    "tenmon-ark",
    "api",
    "express",
    "typescript"
  ],
  "author": "TENMON-ARK",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.21.2",
    "kuromoji": "^0.1.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^6.15.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/kuromoji": "^0.1.3",
    "@types/multer": "^1.4.13",
    "@types/node": "^24.7.0",
    "tsx": "^4.19.1",
    "typescript": "^5.9.3"
  }
}
